<html>
  <head>
    <title>Login</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet"
	href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<link rel="stylesheet"
	href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
<script
	src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
	<script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
  </head>
  <body>
  <form action="/afterSignUp" method="post" class="afterSignIn">
    <!-- This panel is for login -->
    
    <div class="panel panel-primary">
      <!-- Default panel contents -->
        <div class="panel-heading">Sign Up</div>
        <div class="panel-body">
           <form class="form-horizontal" role="form">
		               <div class="form-group  usernameDiv">
		                  <label class="inputUsername" class="col-sm-2 control-label pull-left">Create your username</label>
		                  <div class="col-sm-10">
		                      <input type="text" class="form-control" name="inputUsername" id="inputUsername" placeholder="userid">
		                  </div>
		               </div>
		               
	                  <div class="form-group  usernameDiv">
	                    <label for="inputPassword">Create Your Password</label>
	                    <div class="col-sm-10">
	                      <input type="password" class="form-control" name="inputPassword" id="inputPassword" placeholder="Password">
	                    </div>
	                  </div>
	                  
	                  <div class="form-group  usernameDiv">
	                    <label for="inputFirstName">FirstName</label>
	                    <div class="col-sm-10">
	                      <input type="text" class="form-control" name="inputFirstname" id="inputFirstname" placeholder="fname">
	                    </div>
	                  </div>
	                  
	                  <div class="form-group  usernameDiv">
	                    <label for="inputLastName">LastName</label>
	                    <div class="col-sm-10">
	                      <input type="text" class="form-control" name="inputLastname" id="inputLastname" placeholder="lname">
	                    </div>
	                  </div>
	                  
	                  <div class="form-group  usernameDiv">
	                    <label for="inputBday">Date of Birth</label>
	                    <div class="col-sm-10">
	                      <input type="date" class="form-control" name="inputBday" id="inputBday" placeholder="birthday">
	                    </div>
	                  </div>
	                  
	                  <div class="form-group  usernameDiv">
	                    <label for="inputGender">Your Gender</label>
	                    <div class="col-sm-10">
	                      <input type="text" class="form-control" name="inputGender" id="inputGender" placeholder="gender">
	                    </div>
	                  </div>
	                                    	                  
	                  <div class="form-group ">
	                    <div class="pull-left signIn">
	                      <button type="submit" class="btn btn-primary">SUBMIT</button>
	                    </div>
	                  </div>
	                  
              </form>
        </div>
	</div>
	          			
 </form>	

 </body>
 
</html>